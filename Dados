import requests
from bs4 import BeautifulSoup

# Dados de entrada
data_inicio = "01/01/2021"
data_fim = "01/04/2023"
valor = 1000

# URL da página do Banco Central
url = "https://www3.bcb.gov.br/CALCIDADAO/publico/exibirFormCorrecaoValores.do?method=exibirFormCorrecaoValores"

# Fazer a requisição HTTP com os dados de entrada
response = requests.post(url, data={"dataInicial": data_inicio, "dataFinal": data_fim, "valorCorrecao": valor})

# Extrair o valor corrigido da resposta HTML
soup = BeautifulSoup(response.content, "html.parser")
valor_corrigido = soup.find("input", {"name": "valorCorrigido"}).get("value")

# Exibir o valor corrigido
print(f"Valor corrigido: R$ {valor_corrigido}")
