import requests
from bs4 import BeautifulSoup

# URL da página do Banco Central
url = 'https://www3.bcb.gov.br/CALCIDADAO/publico/exibirFormCorrecaoValores.do?method=exibirForm'

# Dados do formulário a serem enviados na requisição POST
data = {
    'aba': '1',
    'selIndice': '4',  # código do índice INPC(IBGE)
    'dataInicial': '01/2006',
    'dataFinal': '01/2023',
    'valorCorrecao': '1,23',
}

# Envia uma requisição POST com os dados do formulário
response = requests.post(url, data=data)

# Extrai o valor corrigido da página resultante
soup = BeautifulSoup(response.content, 'html.parser')
valor_corrigido = soup.find('span', {'class': 'valor'}).get_text()

print(valor_corrigido)
